<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:background="@color/white"
        android:id="@+id/medlistlenear"
        >

        <ImageView
            android:id="@+id/profile_pic"
            android:orientation="horizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/avtar1" />

        <TextView
            android:id="@+id/txtmedicine"
            android:layout_width="0dp"
            app:customFont="Roboto-Bold.ttf"
            android:layout_weight=".6"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/custom_font_Level_one"
            android:text = "Medicine Name"
            tools:Text ="Medicine Name"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/rx_medikart_small_text_half_dark" />



        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:id="@+id/imgcancel"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:src="@drawable/close_grey" />




    </LinearLayout>



</LinearLayout>
