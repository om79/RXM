<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/lnrLastReading"
              tools:ignore="MissingPrefix"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/lnrweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        android:orientation="horizontal"
      >

        <TextView
            android:id="@+id/txtWeight_Detail"
            fontPath="Roboto-Regular.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:clickable="false"
            android:text="Weight:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/custom_font_Level_four"
            />

        <TextView
            android:id="@+id/txtBodyLocation"
            fontPath="Roboto-Regular.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:clickable="false"
            android:text="Body Location:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/custom_font_Level_four"
            />

        <TextView
            android:id="@+id/txtBodyPosition"
            fontPath="Roboto-Regular.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:clickable="false"
            android:text="Body Position"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/custom_font_Level_four"
            />
    </LinearLayout>
</LinearLayout>