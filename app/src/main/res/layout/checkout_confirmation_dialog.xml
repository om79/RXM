<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/custom_font_Level_one"
            fontPath="Lato-Regular.ttf"
            android:text="Place Order"
            android:id="@+id/textView_main_heading"
            android:textAllCaps="false"
            android:autoText="false"
            android:layout_gravity="top|left"
            android:layout_weight=".6"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textColor="@color/white"
            android:id="@+id/btncancel"
            android:textSize="@dimen/custom_font_Level_one"
            fontPath="Lato-light.ttf"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:padding="5dp"
            android:id="@+id/rdb_group_selection"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="match_parent"
                android:id="@+id/rdo_PayUmoney"
                android:padding="10dp"
                android:visibility="gone"
                android:textColor="@color/colorPrimaryDark"
                android:text="Pay through PayU Money"
                android:layout_height="wrap_content" />


            <RadioButton
                android:layout_width="match_parent"
                android:id="@+id/rdo_easebuzz"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:text="Pay through EaseBuzz"
                android:layout_height="wrap_content" />

            <RadioButton
                android:layout_width="match_parent"
                android:id="@+id/rdo_Cod"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:text="Cash On Delivery"
                android:layout_height="wrap_content" />



        </RadioGroup>

        <TextView
            android:layout_width="fill_parent"
            fontPath="Lato-Regular.ttf"
            android:layout_height="wrap_content"
            android:id="@+id/msg"
            android:visibility="gone"
            android:textSize="@dimen/custom_font_Level_two"
            android:text="Do you want to confirm your order?"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp" />


        <TextView
            android:id="@+id/btnok"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:text="Confirm"
            android:layout_weight="1"
            fontPath="Lato-Bold.ttf"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/orgbtn"
            android:textColor="@color/white"
            android:textSize="@dimen/custom_font_Level_two"
            android:layout_marginBottom="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp" />

    </LinearLayout>





</LinearLayout>

