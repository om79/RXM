<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:showin="@layout/activity_main"
    tools:context=".MainActivity"
    android:paddingBottom="20dp">

    <TextView android:text="Forgot Password"
        android:background="@color/sky_blue"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textIsSelectable="false" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout9"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Email Address and we&apos;ll send you a confirmation code"
            android:id="@+id/maintitle"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="12sp" />


<!--        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID"
            android:id="@+id/title" />-->

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtoldpass"
            android:background="@drawable/drpdwn"
            android:hint="Email Address"
            android:gravity="center|left"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/email2" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout10"
        android:background="@color/white"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Send"
            android:layout_margin="3dp"
            android:background="@color/btncolor_orange"
            android:textColor="@color/white"
            android:id="@+id/btninvite"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp" />

    </LinearLayout>




</RelativeLayout>