<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".95"
        android:id="@+id/sub"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:padding="10dp">
    <!-- Movie invoiceno -->

        <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Description "
        tools:Text ="Product Title"
        android:layout_marginBottom="3dp"
            fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_two"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textColor="@color/btncolor_orange"
        android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />

    <!-- customername -->
    <TextView
        android:id="@+id/txt_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "size"
        fontPath="Lato-regular.ttf"
        android:textColor="#484848"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="3dp"
        android:textSize="@dimen/custom_font_Level_four"

      android:layout_below="@+id/txt_description"
        android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/txt_mfg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text = "Mfg: Glaxosmithkline"
            fontPath="Lato-Bold.ttf"
            android:textSize="@dimen/custom_font_Level_four"
            android:textColor="#666"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/txt_size"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "txt_price"
        fontPath="Lato-Regular.ttf"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        android:textSize="@dimen/custom_font_Level_two"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false"
        android:layout_alignTop="@+id/txt_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txt_more_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "80 percent more"

            fontPath="Lato-Bold.ttf"
            android:textSize="@dimen/custom_font_Level_four"
            android:textColor="#666"


            android:layout_alignTop="@+id/txt_mfg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txt_out_of_stock"
            android:layout_width="200dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text = "out of stock"
            fontPath="Lato-Bold.ttf"
            android:textSize="@dimen/custom_font_Level_four"
            android:textColor="@color/ripple_red"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/txt_mfg"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp" />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/btnaddtocart"
        android:layout_toRightOf="@+id/sub"
        android:layout_weight=".05"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/newcart"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
   <!-- <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnaddtocart"
        android:src="@drawable/bcart_orange"
        android:layout_gravity="right"
        android:adjustViewBounds="false"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY" />-->


</LinearLayout>