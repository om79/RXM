<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
  >

    <TextView
        android:layout_width="fill_parent"
        android:padding="10dp"

        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:textSize="@dimen/custom_font_Level_four"
        android:text="Add Pill buddy to track your progress with them"
        android:layout_height="wrap_content" />


    <ListView
        android:layout_width="fill_parent"

        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/lst_pillbuddy"

       />




    <Button
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:text="Add New Pill Buddy"
        android:id="@+id/add_pill_buddy"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/no_pill_buddy"
        android:visibility="gone"
        android:src="@drawable/mascot4"
        android:layout_height="wrap_content" />


</LinearLayout>
