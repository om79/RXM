<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/lnrfirst"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginBottom="@dimen/space_between_two_control"
    >

    <TextView
        android:id="@+id/textView"
        fontPath="Roboto-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="top|left"
        android:layout_weight=".6"

        android:padding="10dp"
        android:text="Select Type"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/custom_font_Level_one"
        android:textStyle="bold"

        />


    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text=""-->
    <!--android:src="@drawable/close"-->

    <!--android:textColor="@color/white"-->
    <!--android:id="@+id/btncancel"-->
    <!--android:layout_weight="0.1"-->
    <!--android:padding="0dp" />-->

    <Button
        android:id="@+id/btncancel"
        fontPath="Roboto-Bold.ttf"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:padding="0dp"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="20sp"/>



</LinearLayout>

<!-- Editext for Search -->
<EditText android:id="@+id/inputSearch"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="Search products.."
    android:inputType="text"
    android:visibility="gone"/>

<NumberPicker
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/numpicweight"
    android:layout_gravity="center_horizontal"
    android:textSize="@dimen/custom_font_Level_two"
    android:layout_margin="3dp"

    fontPath="Roboto-Regular.ttf"
    />

    <com.andexert.library.RippleView
        android:id="@+id/rect"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:rv_type="rectangle"
        android:padding="2dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:rv_zoom="true">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"

        android:background="@drawable/orgbtn"
        android:textColor="@color/white"
        android:id="@+id/btnok"
        fontPath="Roboto-Bold.ttf"
        android:textSize="@dimen/custom_font_Level_two"
        android:layout_gravity="center"/>

</com.andexert.library.RippleView>
</LinearLayout>