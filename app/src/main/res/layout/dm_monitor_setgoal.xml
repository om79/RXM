                <!--android:id="@+id/spnrWeightType"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight=".30"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Kg"-->
                <!--android:layout_marginLeft="8dp"-->
