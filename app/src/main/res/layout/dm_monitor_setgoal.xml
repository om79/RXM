                <!--android:background="@drawable/drpdwn"-->
                <!--android:entries="@array/array_weighttype"-->
                <!--android:prompt="@string/weighttype_prompt"-->

                <!--/>-->

           // txtgoalweight


            <TextView
                android:id="@+id/txtgoalWeightunit"
                android:layout_width="0dp"
                android:layout_weight=".08"
                android:layout_height="wrap_content"
                android:text="Kg"
                fontPath="Roboto-Regular.ttf"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:textSize="@dimen/custom_font_Level_two"
                 />

            <ImageView

                android:layout_width="20dp"
               android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/tabbg"
                android:src="@drawable/right_down_arrow_blue"
                android:singleLine="true"
                android:layout_marginBottom="3dp"
