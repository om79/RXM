<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    tools:ignore="MissingPrefix"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/lnrfirst"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="@dimen/space_between_two_control"
        > 
        <ImageView
            android:id="@+id/imgsetgoal"
            android:layout_width="30dp"
            android:layout_weight=".05"
            android:padding="8dp"
            android:layout_height="40dp"
            android:src="@drawable/setgoal_white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            fontPath="Roboto-Bold.ttf"

            android:text="Set Goal"
            android:textColor="@color/white"
            android:id="@+id/textView"
            android:textAllCaps="false"
            android:autoText="false"
            android:layout_gravity="top|left"
            android:layout_weight=".6"
            android:textStyle="bold"
            android:textSize="@dimen/custom_font_Level_one"

            />




        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            fontPath="Roboto-Bold.ttf"
            android:text="X"
            android:textColor="@color/white"
            android:background="@drawable/btncancel"
            android:id="@+id/btncancel"
            android:textSize="20sp"
            android:padding="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Blood Sugar"
        fontPath="Roboto-Regular.ttf"
        android:layout_marginLeft="10dp"
        android:id="@+id/systolic"
        android:textSize="@dimen/custom_font_Level_two"
        />
    <!--<RelativeLayout-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->

        <!-->-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:background="@color/white"
      android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/lnrGlucoe"

      >



        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"

            android:padding="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"

            >
            <ImageView

                android:layout_width="30dp"
                android:layout_margin="3dp"
                android:layout_height="25dp"
                android:background="@color/tabbg"
                android:src="@drawable/pill_blue_big"
                android:padding="5dp"
                />





            <TextView
                android:id="@+id/txtgoalbs"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="wrap_content"
                android:hint="0.0"
                android:text=""
                fontPath="Roboto-Regular.ttf"
                android:layout_marginLeft="8dp"
               android:layout_gravity="center_vertical"
                android:gravity="left"
                android:textSize="@dimen/custom_font_Level_two"
                />
            <ImageView

                android:layout_width="30dp"

                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/tabbg"
                android:src="@drawable/right_down_arrow_blue"
                android:singleLine="true"
                android:layout_marginBottom="3dp"
                android:layout_weight=".002" />

            <View
                android:layout_width="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="5dp"
                android:layout_height="25dp"
                android:layout_gravity="center" />



            <!--<Spinner-->
            <!--android:id="@+id/spnrWeightType"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight=".30"-->
            <!--android:layout_height="wrap_content"-->
