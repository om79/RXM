            <!--android:background="@drawable/drpdwn"-->
            <!--android:entries="@array/array_weighttype"-->
            <!--android:prompt="@string/weighttype_prompt"-->

            <!--/>-->

            // txtgoalweight


            <TextView
                android:id="@+id/txtgoalbsunit"
                android:layout_width="0dp"
                android:layout_weight=".08"
                android:layout_height="wrap_content"
                android:text="mg/dL"
                fontPath="Roboto-Regular.ttf"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:textSize="@dimen/custom_font_Level_two"
                />

            <ImageView

                android:layout_width="20dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/tabbg"
                android:src="@drawable/right_down_arrow_blue"
                android:singleLine="true"
                android:layout_marginBottom="3dp"
                />


        </LinearLayout>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Weight"
                fontPath="Roboto-Regular.ttf"
                android:layout_marginLeft="10dp"
                android:id="@+id/weight"
                android:textSize="@dimen/custom_font_Level_two"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:padding="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"

            >

            <ImageView

                android:layout_width="30dp"
                android:layout_margin="3dp"
                android:layout_height="25dp"
                android:background="@color/tabbg"
                android:src="@drawable/pill_blue_big"
                android:padding="5dp"
                />




            <TextView
                android:id="@+id/txtgoalweight"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="wrap_content"
                android:hint="Enter Weight"
                android:text=""
                fontPath="Roboto-Regular.ttf"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:textSize="@dimen/custom_font_Level_two"
                />
            <ImageView

                android:layout_width="30dp"

                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/tabbg"
                android:src="@drawable/right_down_arrow_blue"
                android:singleLine="true"
                android:layout_marginBottom="3dp"
                android:layout_weight=".002" />

            <View
                android:layout_width="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="5dp"
                android:layout_height="25dp"
                android:layout_gravity="center" />



