<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.viroopa.Buying.PrescriptionDetails">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/heading"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:id="@+id/requestNumber"
            android:text="Prescription"
            android:drawablePadding="5dp"
            android:padding="2dp"
            android:singleLine="true"
            android:gravity="center"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_one"
            />


    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@+id/heading"
    android:id="@+id/scroll"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Prescription Name : "
        android:textColor="#08446a"
        android:id="@+id/name_txt"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:layout_marginBottom="3dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:gravity="right"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/presc_name"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/name_txt"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_two"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:gravity="left|center"
        android:padding="5dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_txt"
        android:id="@+id/for_txt"
        android:text="Prescription For : "
        android:textColor="#08446a"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:layout_marginBottom="3dp"
        android:gravity="right"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/presc_for"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/name_txt"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_two"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:gravity="left|center"
        android:padding="5dp"
        android:layout_toRightOf="@+id/for_txt"
        android:layout_toEndOf="@+id/for_txt" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Patient Name : "
        android:id="@+id/patient_txt"
        android:layout_below="@+id/for_txt"
        android:textColor="#08446a"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:layout_marginBottom="3dp"
        android:gravity="right"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/patient_name"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/for_txt"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_two"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:gravity="left|center"
        android:padding="5dp"
        android:layout_toRightOf="@+id/patient_txt"
        android:layout_toEndOf="@+id/patient_txt" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Gender : "
        android:layout_below="@+id/patient_txt"
        android:id="@+id/gender_txt"
        android:textColor="#08446a"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:layout_marginBottom="3dp"
        android:gravity="right"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txt_gender"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/gender_txt"
        android:layout_below="@+id/patient_txt"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_two"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:gravity="left|center"
        android:padding="5dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Doctor Name : "
        android:id="@+id/doc_txt"
        android:layout_below="@+id/gender_txt"
        android:textColor="#08446a"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:layout_marginBottom="3dp"
        android:gravity="right"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/doctor_name"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/gender_txt"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_two"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:gravity="left|center"
        android:padding="5dp"
        android:layout_alignLeft="@+id/txt_gender"
        android:layout_alignStart="@+id/txt_gender" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Selected Best Time For Call : "
        android:textColor="#08446a"
        android:id="@+id/bst_txt"
        android:layout_below="@+id/doc_txt"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:layout_marginBottom="3dp"
        android:gravity="right"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/best_time"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/doc_txt"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_two"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:gravity="left|center"
        android:padding="5dp"
        android:layout_alignLeft="@+id/doctor_name"
        android:layout_alignStart="@+id/doctor_name" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Notes : "
        android:layout_below="@+id/bst_txt"
        android:id="@+id/note_txt"
        android:textColor="#08446a"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:layout_marginBottom="3dp"
        android:gravity="right"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txt_comment"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/bst_txt"
        android:layout_toRightOf="@+id/note_txt"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_two"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:gravity="left|center"
        android:padding="5dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Emergency Delivery : "
        android:textColor="#08446a"
        android:id="@+id/emergncy_txt"
        android:layout_below="@+id/note_txt"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:layout_marginBottom="3dp"
        android:gravity="right"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txt_isemergency"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/note_txt"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_two"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:gravity="left|center"
        android:padding="5dp"
        android:layout_toRightOf="@+id/emergncy_txt"
        android:layout_toEndOf="@+id/emergncy_txt" />



    </RelativeLayout>

</ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prescription Images : "
        android:textColor="#08446a"

        android:id="@+id/presc_img_txt"
        android:layout_below="@+id/scroll"
        fontPath="Lato-Regular.ttf"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/custom_font_Level_four"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/presc_img_txt"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/no_media"
            android:id="@+id/img_first" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:src="@drawable/no_media"
            android:id="@+id/img_second" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/no_media"
            android:id="@+id/img_third" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:src="@drawable/no_media"
            android:id="@+id/img_fourth" />

    </LinearLayout>

</RelativeLayout>
