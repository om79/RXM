<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    tools:showin="@layout/activity_main"
    tools:context=".MainActivity">





    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout21">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:id="@+id/linearLayout2"
            android:background="@color/sky_blue"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"

            >

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#08446a"
                android:textSize="@dimen/custom_font_Level_one"
                android:layout_marginLeft="10dp"
                fontPath="Lato-Regular.ttf"
                android:background="#dfe8f9"
                android:text="Date"
                android:drawableLeft="@drawable/calender"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:textIsSelectable="false"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/txtorderno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#08446a"
                android:textSize="@dimen/custom_font_Level_one"
                fontPath="Lato-Regular.ttf"
                android:background="#dfe8f9"
                android:text="Order No"
                android:drawableLeft="@drawable/box"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:padding="10dp"
                android:layout_weight="0.4"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#08446a"
                android:textSize="@dimen/custom_font_Level_one"
                fontPath="Lato-Regular.ttf"
                android:background="#dfe8f9"
                android:text="Price"
                android:drawableLeft="@drawable/tag"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:padding="10dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical" />


            <TextView
                android:id="@+id/blank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#dfe8f9"
                android:textSize="18dp"
                android:background="#dfe8f9"
                android:text=">"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_weight="0.1" />

        </LinearLayout>

