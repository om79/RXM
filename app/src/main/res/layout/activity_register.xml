<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg2"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:background="@drawable/drpdwn"
            android:padding="10dp"
            android:textColor="#08446a"
            tools:text=""
            android:layout_marginBottom="5dp"
            android:autoText="false"
            android:hint="Your Full Name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:drawableStart="@drawable/user2"
            android:drawablePadding="5dp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last Name"
            android:id="@+id/txtLname"
            android:textColor="#08446a"
            android:visibility="gone" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:background="@drawable/drpdwn"
            android:padding="10dp"
            android:textColor="#08446a"
            tools:text=""
            android:layout_marginBottom="10dp"
            android:visibility="gone" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@drawable/drpdwn"
            android:padding="10dp"
            android:textColor="#08446a"
            android:layout_marginBottom="5dp"
            tools:text=""
            android:hint="Your Email Address"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textIsSelectable="false"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/email2" />

        <EditText
            android:id="@+id/phoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/drpdwn"
            android:padding="10dp"
            android:textColor="#08446a"
            android:maxLength="10"
            android:layout_marginBottom="5dp"
            tools:text=""
            android:hint="Your Phone Number"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/phone" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drpdwn"
            android:padding="10dp"
            android:textColor="#08446a"
            tools:text=""
            android:layout_marginBottom="5dp"
            android:hint="Enter your password"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/lock_rx" />


        <EditText
            android:id="@+id/confpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/drpdwn"
            android:padding="10dp"
            android:textColor="#08446a"
            tools:text=""
            android:layout_marginBottom="5dp"
            android:hint="Confirm Password"
            android:autoText="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/tick" />

        <EditText
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drpdwn"
            android:padding="10dp"
            android:textColor="#08446a"
            android:inputType="number"
            tools:text=""
            android:maxLength="6"
            android:layout_marginBottom="5dp"
            android:hint="Pincode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/city" />

        <!-- <Spinner
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/sp_city1"
             android:layout_marginBottom="10dp"
             android:background="@drawable/drpdwn"
             android:layout_gravity="center_horizontal" />-->

        <!--  <Spinner
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="10dp"
              android:background="@drawable/drpdwn"
              android:textColor="#08446a"
              android:padding="10dp"
              android:text="[Select city]"/>-->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:background="@drawable/drpdwn"

            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/txt_city"
            android:layout_marginBottom="5dp"
            android:focusable="true"
            android:editable="false"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:hint="Your City"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textIsSelectable="false"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/location" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            tools:text="city data"
            android:visibility="gone"
            />






        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/btncolor_orange"

            android:textColor="#ffff"
            android:text="Register"
            android:layout_margin="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnLinkToLoginScreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Login"
            android:visibility="gone" />


        <!-- Link to Login Screen -->

    </LinearLayout>

</LinearLayout>