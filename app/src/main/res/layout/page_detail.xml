<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:background="@drawable/bg"
   android:id="@+id/mainrel"
     android:padding="10dp"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_frame"

        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#ffad1c"
            android:dividerHeight="2dp"
            android:id="@+id/relativeLayout"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
               fontPath="Lato-Regular.ttf"
                android:text="Crocin - 500mg"
                android:layout_marginLeft="5dp"
                android:textColor="#08446a"
                android:textSize="@dimen/custom_font_Level_one"

                android:layout_marginBottom="5dp"
                android:id="@+id/ProductName"
                android:layout_alignParentTop="true"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ProductName"
                android:id="@+id/relativeLayout13">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="130dp"
                android:layout_height="160dp"
                android:src="@drawable/medi_sali"
                android:background="@drawable/white_bg_border"
                />

            </RelativeLayout>

            <Button
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Add  to Cart"

                android:id="@+id/btnAddtocarts"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:textSize="@dimen/custom_font_Level_two"
                fontPath="Lato-Regular.ttf"
                android:layout_below="@+id/LinearLayout15"
                android:background="@drawable/orgbtn"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignLeft="@+id/LinearLayout15"
                android:layout_alignStart="@+id/LinearLayout15" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Out of Stock"
                android:padding="10dp"
                android:visibility="gone"
                android:background="@drawable/ligh_blue_border"
                fontPath="Lato-Regular.ttf"
                android:textColor="@color/view_bg"
                android:id="@+id/txt_out_of_stock"
                android:layout_below="@+id/LinearLayout15"
                android:textSize="14dp"
                android:layout_alignLeft="@+id/LinearLayout15"
                android:layout_alignStart="@+id/LinearLayout15" />



            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_marginTop="5dp"
                android:id="@+id/price_h"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_four"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:layout_below="@+id/ProductName"

                android:layout_alignLeft="@+id/product_price"
                android:layout_alignStart="@+id/product_price" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 999.00"
                android:textColor="@color/btncolor_orange"
                fontPath="Lato-Bold.ttf"
                android:textSize="@dimen/custom_font_Level_one"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/relativeLayout13"
                android:id="@+id/product_price"
                android:layout_below="@+id/price_h"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Available Pack Sizes "
                android:id="@+id/avl_packsize_txt"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_four"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:layout_below="@+id/product_price"

                android:layout_alignLeft="@+id/product_price"
                android:layout_alignStart="@+id/product_price"
                android:layout_marginBottom="5dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:orientation="horizontal"

                android:layout_below="@+id/avl_packsize_txt"
                android:layout_alignLeft="@+id/product_price"
                android:layout_alignStart="@+id/product_price"
                android:id="@+id/horizontal_buttons"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone"
                    fontPath="Lato-Bold.ttf"
                    android:id="@+id/firstbtn"
                    android:background="@drawable/text_box_border_small"
                    android:text="10"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone"
                   fontPath="Lato-Bold.ttf"
                    android:id="@+id/secondbtn"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/text_box_border_small"
                    android:text="20"
                    />
                <TextView
                    android:background="@drawable/text_box_border_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone"
                   fontPath="Lato-Bold.ttf"
                    android:id="@+id/thirdbtn"
                    android:layout_marginLeft="8dp"
                    android:text="30"
                    />
                <TextView
                    android:background="@drawable/text_box_border_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone"
                   fontPath="Lato-Bold.ttf"
                    android:id="@+id/fourthbtn"
                    android:layout_marginLeft="8dp"
                    android:text="40"
                    />
                <TextView
                    android:background="@drawable/text_box_border_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fifthbtn"
                    android:visibility="gone"
                   fontPath="Lato-Bold.ttf"
                    android:layout_marginLeft="8dp"
                    android:padding="5dp"
                    android:text="50"
                    />

            </RadioGroup>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/horizontal_buttons"
                android:layout_alignLeft="@+id/product_price"
                android:layout_alignStart="@+id/product_price"
                android:id="@+id/lnr_no_pack_size"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/custom_font_Level_four"
                    fontPath="Lato-Regular.ttf"
                    android:background="@drawable/textbox_border_light_black_white_background"
                    android:textColor="@color/gray"
                    android:text="No Packsize available"
                    android:padding="2dp"


                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:id="@+id/qtny"
               fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_four"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:layout_below="@+id/lnr_no_pack_size"

                android:layout_alignLeft="@+id/product_price"
                android:layout_alignStart="@+id/product_price"
                android:layout_marginBottom="5dp" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/qtny"
                android:id="@+id/LinearLayout15"
                android:layout_alignLeft="@+id/product_price"
                android:layout_alignStart="@+id/product_price"
               >

                <Button
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"

                    android:text=" - "
                    android:background="@drawable/ligh_blue_border"
                    android:id="@+id/btnminus"
                    android:textSize="@dimen/custom_font_Level_two" />

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/Qty"
                   fontPath="Lato-Regular.ttf"
                    android:gravity="center"
                    android:background="@drawable/textbox_border_light_black_white_background"
                    android:textColor="@color/btncolor_orange"
                    android:text=" 1"

                    android:textSize="@dimen/custom_font_Level_two" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text=" + "
                    android:background="@drawable/ligh_blue_border"
                    android:padding="2dp"
                    android:id="@+id/btnplus"
                    android:textSize="@dimen/custom_font_Level_two" />

            </LinearLayout>



        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="* Prices are subject to change depending on the batch availability"
            android:id="@+id/txt_price_msg"
            android:layout_centerInParent="true"
           fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_four"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Other Drug details"
            android:id="@+id/txtsecheading"
           fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_four"
            android:textColor="@color/rx_medikart_small_text_half_dark"
            android:layout_below="@+id/txt_price_msg"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/txtsecheading"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayoutItemDetails"
            android:layout_gravity="right|top"
            android:divider="#df6301"
            android:padding="10dp"
            android:layout_below="@+id/txtsecheading"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#08446a"
                android:textStyle="bold"
                android:text="product name"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_above="@+id/txt_company"
                android:layout_toRightOf="@+id/txt_therapeutic"
                android:layout_toEndOf="@+id/txt_therapeutic" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="company name"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:textColor="@color/btncolor_orange"
                android:layout_below="@+id/product_name"
                android:layout_toRightOf="@+id/txt_company"

                android:layout_marginBottom="5dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/dosageform"
                android:layout_width="wrap_content"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_four"
                android:visibility="gone"
                android:textColor="@color/btncolor_orange"
                android:layout_height="wrap_content"
                android:text="dosageform"
                android:layout_below="@+id/form"
                android:layout_alignLeft="@+id/companyname"
                android:layout_alignStart="@+id/companyname"
                android:layout_marginTop="3dp"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/form"
                android:layout_width="wrap_content"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:layout_marginTop="3dp"
                android:textColor="@color/btncolor_orange"
                android:layout_height="wrap_content"
                android:text="form"
                android:layout_alignStart="@+id/companyname"
                android:layout_below="@+id/companyname"
                android:layout_toRightOf="@+id/txt_form"
                android:layout_marginBottom="5dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_four"
                android:visibility="gone"
                android:textColor="@color/btncolor_orange"
                android:text="route"
                android:layout_below="@+id/dosageform"
                android:layout_alignLeft="@+id/dosageform"
                android:layout_alignStart="@+id/dosageform"
                android:layout_marginTop="3dp"
               />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#08446a"
                android:textStyle="bold"
                android:text="category"
                android:layout_below="@+id/route"
                android:layout_alignLeft="@+id/route"
                android:layout_alignStart="@+id/route"
                android:visibility="gone"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/packsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:textColor="@color/btncolor_orange"
                android:text="packsize"
                android:layout_below="@+id/route"
                android:layout_alignLeft="@+id/category"
                android:layout_alignStart="@+id/category"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:textColor="@color/btncolor_orange"
                android:text="type"
                android:layout_below="@+id/packsize"
                android:layout_alignLeft="@+id/packsize"
                android:layout_alignStart="@+id/packsize"
                android:layout_marginTop="3dp"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Product"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="gone" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Company Name  :  "
                android:id="@+id/txt_company"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp" />


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Form                     :"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:id="@+id/txt_form"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/companyname"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Dosage Form :"
                fontPath="Lato-Regular.ttf"
                android:visibility="gone"
                android:textSize="@dimen/custom_font_Level_four"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:id="@+id/txt_dosage_form"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
               android:layout_below="@+id/txt_form"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Route of Administration :"
                android:id="@+id/txt_route"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_four"
                android:visibility="gone"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:layout_below="@+id/txt_dosage_form"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Category"
                android:id="@+id/textView9"
                android:layout_below="@+id/txt_route"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pack Size             :"
                android:id="@+id/txt_therapeutic"
                android:layout_below="@+id/txt_route"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Drug Class           :"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:id="@+id/txt_type"
                android:layout_below="@+id/txt_therapeutic"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
               />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/relativeLayoutItemDetails"
            android:id="@+id/msgfirst"
            android:padding="15dp"
            android:layout_height="wrap_content">

            <TextView

                fontPath="Lato-Regular.ttf"
                android:id="@+id/note"
                android:text="Note: "
                android:textSize="@dimen/custom_font_Level_four"
                android:textColor="@color/btncolor_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                fontPath="Lato-Regular.ttf"
                android:layout_marginTop="5dp"
               android:layout_below="@+id/note"
                android:text="@string/medicine_detail_first_msg"
                android:textSize="@dimen/custom_font_Level_four"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:padding="15dp"
            fontPath="Lato-Regular.ttf"
            android:layout_below="@+id/msgfirst"
            android:text="@string/medicine_detail_first_msg"
            android:textSize="@dimen/custom_font_Level_four"
            android:visibility="gone"
            android:textColor="@color/rx_medikart_small_text_half_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            android:background="@drawable/sky_blue_border"
            android:layout_below="@+id/relativeLayoutItemDetails"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="-5dp"
            android:visibility="gone"
            android:layout_marginRight="-5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available sizes"
                android:padding="10dp"
                fontPath="Lato-Regular.ttf"
                android:textColor="@color/black"
                android:id="@+id/textView23"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_no_size_available"
            android:background="@color/white"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="No alternate pack size available"
                android:padding="5dp"
                android:textColor="@color/black"
                android:id="@+id/txt_no_size_available"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_below="@+id/rl_no_size_available"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:divider="#ffad1c"
            android:visibility="gone"
            android:id="@+id/relativeLayout4"
            android:background="#fff">

            <ListView
                android:id="@+id/list_packsize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@color/gray"
                android:dividerHeight="1dp"
                android:listSelector="@drawable/list_row_selector"
                android:choiceMode="singleChoice"
                tools:Text ="Prescrption lists"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>



    </RelativeLayout>

</ScrollView>