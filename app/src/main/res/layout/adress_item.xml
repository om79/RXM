<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:id="@+id/Main_rel_address"
    android:layout_height="wrap_content"
    tools:showin="@layout/activity_main"
android:padding="10dp"
    tools:context=".MainActivity">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Residential Address"
        android:id="@+id/address_chk"
        android:textSize="@dimen/custom_font_Level_two"
        fontPath="Lato-Regular.ttf"
        android:textColor="#f38630"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:text="X"
        android:visibility="gone"
        android:background="@drawable/text_box_border_small"
        fontPath="Lato-Regular.ttf"

        android:textSize="@dimen/custom_font_Level_two"
        android:id="@+id/DeleletAdress"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="New Text"
        android:textColor="#666"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_one"
        android:id="@+id/address_name"
        android:layout_below="@+id/address_chk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="New Text"
        android:textColor="#666"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:id="@+id/address_details"
        android:layout_below="@+id/address_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="New Text"
        android:textColor="#666"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:id="@+id/address_City"
        android:layout_below="@+id/address_details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:text="New Text"
    android:textColor="#666"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="20dp"
    fontPath="Lato-Regular.ttf"
    android:textSize="@dimen/custom_font_Level_four"
    android:id="@+id/address_State"
    android:layout_below="@+id/address_City"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="New Text"
        android:textColor="#666"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        fontPath="Lato-Regular.ttf"
        android:textSize="@dimen/custom_font_Level_four"
        android:id="@+id/address_Phone_number"
        android:layout_below="@+id/address_State"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />


</RelativeLayout>