<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/sky_blue"
        android:paddingLeft="20dp"

        android:paddingRight="20dp"
        android:visibility="gone"
        android:layout_height="wrap_content">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/view2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/firstid"
            android:layout_alignStart="@+id/firstid"
            android:layout_alignEnd="@+id/forthdid"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstid"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/s_medicine_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/orangecircle"
                android:singleLine="true"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/view2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s_medicine_txt"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:text="   Select Medicines"
                android:padding="4dp"
               fontPath="Lato-regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:id="@+id/view" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondid"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/firstid"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/orangecircle"
                android:singleLine="true"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/view2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:text="   Upload Prescription"
                android:padding="4dp"
               fontPath="Lato-regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdid"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/secondid"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/orangecircle"
                android:singleLine="true"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/view2"
                android:layout_alignParentLeft="true"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:text="Shipping Address"
                android:padding="4dp"
                fontPath="Lato-Regular.ttf"

                android:textSize="@dimen/custom_font_Level_two"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forthdid"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/thirdid"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/orangecircle"
                android:singleLine="true"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/view2"
                fontPath="Lato-Regular.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:text="Confirmation"
                android:padding="3dp"

                fontPath="Lato-Regular.ttf"

                android:textSize="@dimen/custom_font_Level_two"
                />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toprelative"
        android:background="@color/sky_blue"
        >



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin2"

            android:layout_marginTop="20dp"
            android:height="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            android:background="#a2bacd"
            android:autoText="true"
            android:alpha=".5" />



        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/img"

            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="0.25"
                android:paddingBottom="2dp"
                android:layout_height="65dp">

                <ImageView
                    android:id="@+id/txtStatus"
                    android:layout_marginTop="13dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fill_circle_grey"
                    />
                <TextView
                    android:id="@+id/txtStatus1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:gravity="center"
                    android:textColor="#A4B6CA"
                    android:layout_gravity="center"
                    android:text="     Select Medicines"
                    fontPath="Lato-Regular.ttf"
                    android:textSize="@dimen/custom_font_Level_four"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="0.25"

                android:paddingBottom="2dp"
                android:layout_height="65dp">


                <ImageView
                    android:id="@+id/txt0Status"
                    android:layout_width="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    fontPath="Lato-Regular.ttf"
                    android:src="@drawable/fill_circle_grey"
                    />


                <TextView
                    android:id="@+id/txt0Status2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    fontPath="Lato-Regular.ttf"
                    android:padding="2dp"
                    android:textColor="#A4B6CA"
                    android:gravity="center"
                    android:textSize="@dimen/custom_font_Level_four"
                    android:text="Upload Prescription"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="0.25"
                android:paddingBottom="2dp"
                android:layout_height="65dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fill_circle_orange"
                    android:id="@+id/txt1Status"
                    />


                <TextView
                    android:id="@+id/txt0Status3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    fontPath="Lato-Regular.ttf"
                    android:textSize="@dimen/custom_font_Level_four"
                    android:text="    Shipping Address"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="0.25"

                android:paddingBottom="2dp"
                android:layout_height="65dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fill_circle_grey"
                    android:id="@+id/txt2Status"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/txt0Status4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="Lato-Regular.ttf"
                    android:padding="2dp"
                    android:textColor="#A4B6CA"
                    android:textSize="@dimen/custom_font_Level_four"
                    android:text="Confirmation"
                    android:layout_gravity="center"
                    android:drawablePadding="5dp"
                    />
            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>
    <LinearLayout
