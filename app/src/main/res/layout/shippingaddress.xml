    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/toprelative"
        android:padding="0dp"
        android:id="@+id/secondLayout"
        android:layout_height="wrap_content">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnaddaddress"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:text="Add New Address"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            fontPath="Lato-Regular.ttf"

            android:background="@drawable/text_box_border_small"
            android:textColor="@color/btncolor_orange"
            android:textSize="@dimen/custom_font_Level_two"
            android:layout_margin="0dp"
            android:textAlignment="viewStart" />


    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lst_address"
        android:layout_above="@+id/bottom_relative"
        android:layout_below="@+id/secondLayout"
        android:choiceMode="singleChoice"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_gravity="bottom"
        android:background="@color/btncolor_orange"
        android:layout_alignParentBottom="true"
        android:paddingRight="20dp"

        android:id="@+id/bottom_relative"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/nextlayout"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/txt_Next_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Next"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textAllCaps="true"
                fontPath="Lato-regular.ttf"

                android:textSize="@dimen/custom_font_Level_two"
                android:textColor="@color/white"
                />

            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/txt_Next_first"
                android:layout_marginTop="5dp"
                android:src="@drawable/right_arrow_white"
                />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/previouslayout"
            >

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/previous_white_arrow"
                />

            <TextView
                android:id="@+id/txt_prevoius_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Back"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/btnBack"
                android:textAllCaps="true"
                fontPath="Lato-regular.ttf"

                android:textSize="@dimen/custom_font_Level_two"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"

                />
        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>