<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
         android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/custom_font_Level_one"
            android:text="MedFriend Request"
            fontPath="Roboto-Bold.ttf"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/add_pillbuddy_white"
            android:id="@+id/textView"
            android:textAllCaps="false"
            android:autoText="false"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="X"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:id="@+id/btncancel"
            android:textSize="20sp"
            android:padding="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        android:text="fsdfsfsdfdsfdfdsfsdfsdfsdfsdfsf"
        android:id="@+id/txt_msg"
        android:textSize="@dimen/custom_font_Level_one"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"

            android:layout_weight="1"
            android:drawableLeft="@drawable/tick_white"
            fontPath="Roboto-Regular.ttf"
            android:background="@color/orange"
            android:text="Accept"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_rject"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/cancel_white"
            fontPath="Roboto-Regular.ttf"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:text="Reject"
            android:textColor="@color/white" />



    </LinearLayout>



</LinearLayout>
