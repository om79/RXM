<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"

    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mascot1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_main" />

    <TextView
        android:id="@+id/txtheading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_main"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:text="Helping you manage your BP Monitor!"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/custom_font_Level_high"/>

    <TextView
        android:id="@+id/txtmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/txtheading"
        android:layout_centerHorizontal="true"
        android:text="Being an integral part of your recovery"
        android:textColor="@color/rx_medikart_small_text_half_dark"
        android:textSize="@dimen/custom_font_Level_two"/>


</RelativeLayout>
