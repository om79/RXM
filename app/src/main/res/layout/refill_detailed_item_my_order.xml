<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lkjy"
    android:background="@color/white"
    android:paddingTop="10dp"

    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
           android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/tablet2"
            android:layout_toLeftOf="@+id/refi_product"
            android:layout_toStartOf="@+id/refi_product"
            android:layout_alignTop="@+id/refi_product"
            android:adjustViewBounds="true"
            android:paddingRight="5dp" />

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prodimg"
            android:src="@drawable/bcart_orange"
            android:layout_gravity="left"
            android:adjustViewBounds="false"
            android:padding="10dp"

            android:layout_alignParentLeft="true"
            android:scaleType="fitXY" />-->


        <TextView
            android:id="@+id/refi_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fontPath="Lato-regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            android:focusable="false"
            android:text="Product :"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="3dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/refi_packsize"
            android:layout_alignStart="@+id/refi_packsize"
            android:layout_marginLeft="10dp" />



        <TextView
            android:id="@+id/refi_packsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pack size :"
            android:focusable="false"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="3dp"
            android:layout_below="@+id/refi_product"
            android:layout_toRightOf="@+id/textView21"
            android:layout_toEndOf="@+id/textView21"
            android:layout_marginLeft="35dp"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_four"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/refi_amount"
            android:layout_width="wrap_content"
            fontPath="Lato-regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:text="\u20B9 "
            android:textColor="@color/colorPrimary"
            android:layout_alignTop="@+id/refi_Qty"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_marginRight="20dp"
            android:layout_alignRight="@+id/btntracking" />



        <TextView
            android:id="@+id/refi_Qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty : "
            android:focusable="false"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/refi_product"
            android:layout_toRightOf="@+id/refi_packsize"
            android:layout_toEndOf="@+id/refi_packsize"
            android:layout_marginLeft="37dp"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_four"
            android:layout_marginStart="37dp"
            android:layout_marginTop="5dp" />




        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnaddtocart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:textColor="#fff"
            android:background="@drawable/orgbtn"
            android:text="Add to Cart"
            android:visibility="gone"
            android:layout_below="@+id/refi_packsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/textView20"
            android:textColor="@color/colorPrimary"
            android:layout_above="@+id/refi_packsize"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="  "
            android:textColor="@color/colorPrimary"
            android:id="@+id/textView21"
            android:layout_marginBottom="3dp"
            android:layout_below="@+id/textView20"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/textView22"
            android:textColor="@color/colorPrimary"
            android:layout_alignBottom="@+id/Qty"
            android:layout_toRightOf="@+id/btnplus"
            android:layout_toEndOf="@+id/btnplus"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />


        <ImageView
            android:layout_width="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="20dp"
            android:id="@+id/btn_cancel_product"
            android:src="@drawable/close"
            android:layout_gravity="right"
            android:adjustViewBounds="false"
            android:focusable="false"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY" />






            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/line"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@+id/thumbnail"
                android:layout_marginBottom="15dp">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lin2"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    fontPath="Lato-Regular.ttf"
                    android:textSize="@dimen/custom_font_Level_two"
                    android:background="@color/gray"
                    android:autoText="false" />



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:id="@+id/img"

                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.25"
                    android:paddingBottom="2dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/txtStatus"
                        android:layout_marginTop="20dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:focusable="false"
                        android:layout_gravity="center"
                        android:src="@drawable/fill_circle_grey"
                         />
                    <TextView
                        android:id="@+id/txtStatus1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Order Placed"
                        fontPath="Lato-Regular.ttf"
                        android:textSize="@dimen/custom_font_Level_four"
                        />
                    </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.25"

                    android:paddingBottom="2dp"
                    android:layout_height="60dp">


                    <ImageView
                        android:id="@+id/txt0Status"
                        android:layout_width="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        fontPath="Lato-Regular.ttf"
                        android:src="@drawable/fill_circle_grey"
                         />


                    <TextView
                        android:id="@+id/txt0Status2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        fontPath="Lato-Regular.ttf"
                        android:padding="2dp"
                        android:gravity="center"
                        android:textSize="@dimen/custom_font_Level_four"
                        android:text="Confirmed"
                        android:layout_gravity="center"

                        />

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.25"
                    android:paddingBottom="2dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fill_circle_grey"
                        android:id="@+id/txt1Status"
                      />


                    <TextView
                        android:id="@+id/txt0Status3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        fontPath="Lato-Regular.ttf"
                        android:textSize="@dimen/custom_font_Level_four"
                        android:text="Dispatched"
                        android:padding="2dp"
                        android:layout_gravity="center"
                        android:gravity="center" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.25"

                    android:paddingBottom="2dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fill_circle_grey"
                        android:id="@+id/txt2Status"
                        android:gravity="center_horizontal" />


                    <TextView
                        android:id="@+id/txt0Status4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fontPath="Lato-Regular.ttf"
                        android:padding="2dp"
                        android:textSize="@dimen/custom_font_Level_four"
                        android:text="Delivered"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        />
                    </LinearLayout>


                </LinearLayout>





            </RelativeLayout>





        <TextView
            android:id="@+id/Status_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status :  "
            android:focusable="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/line"
            fontPath="Lato-Bold.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            />


        <TextView
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:focusable="false"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Status_heading"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/line"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
           />

        <TextView
            android:id="@+id/btntracking"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:text="Track Order"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
           android:focusable="false"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/line"
            android:textAllCaps="false"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_four"
            android:background="@drawable/titbg"

            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:height="1dp"
            android:id="@+id/second_line"
            android:layout_below="@+id/btntracking"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            android:background="@color/gray"
            android:layout_marginTop="10dp" />






    </RelativeLayout>


