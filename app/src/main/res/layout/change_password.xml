<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/Main_layout"
    tools:showin="@layout/activity_main"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout9"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView21"

            android:src="@drawable/lock_new_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtoldpass"
            android:background="@drawable/drpdwn"
            android:padding="10dp"
            android:inputType="textPassword"
            android:hint="Old Password"

            android:gravity="center|left"
            android:layout_marginBottom="10dp"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            android:fontFamily="sans-serif"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtpass"
            android:background="@drawable/drpdwn"
            android:inputType="textPassword"
            android:padding="10dp"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            android:hint="New Password"
            android:gravity="center|left"
            android:layout_marginBottom="10dp"

            android:fontFamily="sans-serif"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtcompass"
            android:background="@drawable/drpdwn"
            android:padding="10dp"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_two"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:gravity="center|left"

            android:fontFamily="sans-serif"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout10"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Clear"

            android:background="@drawable/orgbtn"
            android:textColor="@color/white"
            android:id="@+id/btnnocode"
            android:layout_margin="3dp"
            android:layout_weight="1"
            fontPath="Lato-Regular.ttf"
            android:textSize="@dimen/custom_font_Level_two" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Update Password"
            android:layout_margin="3dp"
            fontPath="Lato-Regular.ttf"
            android:background="@drawable/orgbtn"
            android:textColor="@color/white"
            android:id="@+id/btnconfirm"
            android:layout_weight="1"
            android:textSize="@dimen/custom_font_Level_two"/>



    </LinearLayout>


</RelativeLayout>