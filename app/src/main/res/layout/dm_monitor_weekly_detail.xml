<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/sky_blue"
    android:id="@+id/relweeklydetail"
    tools:ignore="MissingPrefix" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "title"
        android:background="@color/colorPrimary"
        android:textColor="@color/sky_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:id="@+id/detailtop" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.13"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/usecircle"
                android:id="@+id/first_image_circle"
                android:layout_height="70dp" />
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "28"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                fontPath="Roboto-Bold.ttf"
                android:textSize="@dimen/custom_font_Level_two"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp" />

            <TextView
                android:id="@+id/txtbtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="Roboto-Bold.ttf"
                android:textColor="@color/gray"
                android:textSize="@dimen/custom_font_Level_four"
                android:text = "Mar"
                android:layout_below="@+id/txtDate"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "2"
                android:gravity="center"
                android:padding="2dp"
                fontPath="Roboto-Regular.ttf"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:textSize="@dimen/custom_font_Level_two"

                />
            <TextView
                android:id="@+id/txtbtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "PM"
                fontPath="Roboto-Bold.ttf"
                android:textColor="@color/gray"
                android:gravity="center"
                android:textSize="@dimen/custom_font_Level_four"
                android:padding="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.15"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "112.0"
                android:gravity="center"
                fontPath="Roboto-Regular.ttf"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:textSize="@dimen/custom_font_Level_two"
                android:padding="2dp"
                />

            <TextView
                android:id="@+id/txtbtbsunit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "mg/dl"
                android:padding="2dp"
                fontPath="Roboto-Regular.ttf"
                android:gravity="center"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:textSize="@dimen/custom_font_Level_two"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.13"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text = "120"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                fontPath="Roboto-Regular.ttf"
                android:textColor="@color/rx_medikart_small_text_half_dark"
                android:textSize="@dimen/custom_font_Level_two"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/txtbtWeightunit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text = "Kg"
                android:gravity="center"
                android:textSize="@dimen/custom_font_Level_four"
                android:layout_gravity="center"
                android:padding="2dp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
